<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/twenty_dp">
            <TextView android:textSize="@dimen/text_size_30" android:textColor="@color/colorWhite" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="@dimen/eighty_dp" android:text="Music: " />
            <Button android:layout_gravity="center" android:id="@id/musicView" android:background="@drawable/music_on" android:layout_width="@dimen/eighty_dp" android:layout_height="@dimen/eighty_dp" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/twenty_dp">
            <TextView android:textSize="@dimen/text_size_30" android:textColor="@color/colorWhite" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="@dimen/eighty_dp" android:text="Sound: " />
            <Button android:layout_gravity="center" android:id="@id/soundView" android:background="@drawable/volume_on" android:layout_width="@dimen/eighty_dp" android:layout_height="@dimen/eighty_dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>